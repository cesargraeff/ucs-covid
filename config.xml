<?xml version='1.0' encoding='utf-8'?>
<widget id="br.ucs.covid" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Covid-19</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <preference name="StatusBarBackgroundColor" value="#CCC" />
    <platform name="android">
        <icon density="mdpi" src="res/android/mdpi.png"/>
        <icon density="hdpi" src="res/android/hdpi.png"/>
        <icon density="xhdpi" src="res/android/xhdpi.png"/>
        <icon density="xxhdpi" src="res/android/xxhdpi.png"/>
        <icon density="xxxhdpi" src="res/android/xxxhdpi.png"/>
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <hook src="hooks/build.sh" type="before_build" />
    <hook src="hooks/build.sh" type="before_run" />
</widget>
